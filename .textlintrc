{
  "plugins": [
    "html"
  ],
  "rules": {
    // 技術文書向けの textlint ルールプリセット
    "preset-ja-technical-writing": {
      // 漢数字と算用数字の使い分け : 誤検知があるので無視
      "arabic-kanji-numbers": false,
      // よくある日本語の誤用をチェックする
      "ja-no-abusage": true,
      // 文末の句点記号に「。」を使う
      "ja-no-mixed-period": false,
      // 冗長な表現を禁止する
      "ja-no-redundant-expression": true,
      // 同一の単語を間違えて連続しているのをチェックする : 「ほどほど」「よくよく」などがヒットするので無視、中には誤りもあるので時々チェックする
      "ja-no-successive-word": false,
      // 弱い日本語表現の利用を使用しない : 無視
      "ja-no-weak-phrase": false,
      // 1文中のカンマ
      "max-comma": {
        "max": 3
      },
      // 連続できる最大の漢字長 : 固有名詞は allow オプションに記述して回避できる
      "max-kanji-continuous-len": {
        "max": 15,
        "allow": []
      },
      // 1文中の読点
      "max-ten": {
        "max": 5
      },
      // 同じ接続詞を連続して使用しない : 大変なので無視
      "no-doubled-conjunction": false,
      // 逆接の接続助詞「が」を連続して使用しない
      "no-doubled-conjunctive-particle-ga": true,
      // 同じ助詞を連続して使用しない : 大変なので無視
      "no-doubled-joshi": false,
      // 二重否定は使用しない
      "no-double-negative-ja": true,
      // ら抜き言葉を使用しない
      "no-dropping-the-ra": true,
      // 感嘆符「!！?？」を使用を禁止する
      "no-exclamation-question-mark": false,
      // 不必要な制御文字を使用しない
      "no-invalid-control-character": true,
      // 半角カナを使用しない
      "no-hankaku-kana": true,
      // 「ですます調」、「である調」を統一する
      "no-mix-dearu-desumasu": {
        "preferInHeader": "である",  // 見出し
        "preferInBody": "である",    // 本文はですます調
        "preferInList": "である",    // 箇条書きはである調
        "strict": true               // 文末以外のチェックをする
      },
      // UTF8-MAC 濁点を使用しない : 「イ゛ーーーー」がヒットするので無視・textlint-filter-rule-comments で除外するか悩みどころ
      "no-nfd": false,
      // 重複した接続詞 : 「</p>」がヒットしてしまうため除外
      "no-start-duplicated-conjunction": false,
      // 1文の長さ : 無視
      "sentence-length": false,
    },
    // 日本語周りにおけるスペースの有無を決定する textlint ルールプリセット
    "preset-ja-spacing": {
      // カタカナ語間は中黒または半角スペースを用いて区切る
      "ja-nakaguro-or-halfwidth-space-between-katakana": true,
      // かっこの外側、内側ともにスペースを入れない : 無視
      "ja-no-space-around-parentheses": false,
      // 全角文字同士の間にスペースを入れない : 見出しに使用するので無視
      "ja-no-space-between-full-width": false,
      // 半角文字と全角文字の間にスペースを入れるかどうか : 上手く検知できないので無視
      "ja-space-between-half-and-full-width": false,
      // 文末に感嘆符を使用し、後に別の文が続く場合は、直後に全角スペースを挿入する : 不要
      "ja-space-after-exclamation": false,
      // 文末に疑問符を使用し、後に別の文が続く場合は、直後に全角スペースを挿入する : 不要
      "ja-space-after-question": false,
      // インラインコードの前後が日本語である場合に半角スペースを入れるか
      "ja-space-around-code": true
    },
    // サ抜き、サ入れ表現の誤用
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": true,
    // 漢字よりもひらがなで表記したほうが読みやすい補助動詞を指摘する
    "ja-hiragana-hojodoushi": true,
    // 全角アルファベット
    "no-mixed-zenkaku-and-hankaku-alphabet": true
  }
}
