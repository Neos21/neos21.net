# Hidden .htaccess
AddHandler cgi-script htaccess

# Redirect
<If "%{HTTP_HOST} == 'neo.s21.xrea.com'">
Redirect permanent / https://neos21.net/
</If>

# No Cache
<IfModule mod_headers.c>
  <FilesMatch "Â¥.(html|css|xml)$">
    Header set Pragma "no-cache"
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Expires 0
  </FilesMatch>
</IfModule>

# XREA Ad
LayoutIgnoreURI *
LayoutIgnoreURI *.html
LayoutIgnoreURI *.cgi

# Error Document Redirect
ErrorDocument 403 https://neos21.net/403.html
ErrorDocument 404 https://neos21.net/404.html
ErrorDocument 500 https://neos21.net/500.html
