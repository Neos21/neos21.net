{
  "name": "neo.s21.xrea.com",
  "description": "Neo's World",
  "private": true,
  "scripts": {
    "?start": "echo 'ライブリロード開発を始める'",
    "start": "gulp dev",
    "?gulp": "echo 'ローカルインストールしている gulp コマンド'",
    "gulp": "gulp",
    "?blc": "echo 'ローカルインストールしている broken-link-checker (blc) コマンド'",
    "blc": "broken-link-checker",
    "?lint-html": "echo 'HTMLHint チェックを行う (docs ディレクトリを見るため要ビルド)'",
    "lint-html": "htmlhint --config .htmlhintrc ./docs/",
    "?lint-link": "echo 'Broken-Link-Checker でデッドリンクチェックを行う (要ライブリロードサーバ起動・更新履歴ページのみ無視)'",
    "lint-link": "broken-link-checker http://localhost:3000/ -roe --filter-level 0 --exclude new.html new-2005.html",
    "?build": "echo 'src ディレクトリ配下を全量再ビルドする'",
    "build": "gulp build",
    "?list": "echo 'FTP 接続し配下のファイルを確認する'",
    "list": "node ftp-list-files.js",
    "?detect": "echo 'FTP アップロード対象となる、差分のある docs/ 配下のファイルを出力する'",
    "detect": "node ftp-detect-files.js",
    "?upload": "echo 'FTP 接続し指定のファイルのみアップロードする'",
    "upload": "node ftp-upload-files.js",
    "?deploy": "echo 'FTP 接続し docs ディレクトリ配下の全ファイルをアップロードする'",
    "deploy": "node ftp-deploy.js"
  },
  "author": "Neo <neos21@gmail.com> (http://neo.s21.xrea.com/)",
  "license": "MIT",
  "homepage": "http://neo.s21.xrea.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Neos21/neo.s21.xrea.com.git"
  },
  "bugs": {
    "url": "https://github.com/Neos21/neo.s21.xrea.com/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Neos21"
  },
  "keywords": [
    "Neo's World"
  ],
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@neos21/gulp-template-html": "1.0.6",
    "@neos21/neos-normalize": "1.0.15",
    "babelify": "10.0.0",
    "broken-link-checker": "0.7.8",
    "browser-sync": "2.26.7",
    "browserify": "16.5.0",
    "del": "5.1.0",
    "ftp-client": "0.2.2",
    "ftp-deploy": "2.3.6",
    "gulp": "4.0.2",
    "gulp-clean-css": "4.2.0",
    "gulp-load-plugins": "2.0.2",
    "gulp-plumber": "1.2.1",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.0.2",
    "gulp-uglify": "3.0.2",
    "htmlhint": "0.11.0",
    "promise-ftp": "1.3.5",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  }
}
