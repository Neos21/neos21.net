{
  "name": "neo.s21.xrea.com",
  "description": "Neo's World",
  "private": true,
  "scripts": {
    "?info": "echo 'npm-scripts の概要を表示する'",
    "info": "npm-scripts-info",
    "?start": "echo 'ライブリロード開発を始める'",
    "start": "gulp dev",
    "?gulp": "echo 'ローカルインストールしている gulp コマンド'",
    "gulp": "gulp",
    "?htmlhint": "echo 'ローカルインストールしている htmlhint コマンド'",
    "htmlhint": "htmlhint",
    "?textlint": "echo 'ローカルインストールしている textlint コマンド'",
    "textlint": "textlint",
    "?blc": "echo 'ローカルインストールしている broken-link-checker (blc) コマンド'",
    "blc": "broken-link-checker",
    "?lint-html": "echo 'HTMLHint チェックを行う (dist ディレクトリを見るため要ビルド)'",
    "lint-html": "htmlhint --config .htmlhintrc ./dist/",
    "?lint-text": "echo 'TextLint チェックを行う'",
    "lint-text": "textlint src/pages/*.html src/pages/**/*.html src/pages/**/**/*.html",
    "?lint-link": "echo 'Broken-Link-Checker でデッドリンクチェックを行う (要ライブリロードサーバ起動・更新履歴ページのみ無視)'",
    "lint-link": "broken-link-checker http://localhost:3000/ -roe --filter-level 0 --exclude new.html new-2005.html",
    "?build": "echo 'src ディレクトリ配下を全量再ビルドする'",
    "build": "gulp build",
    "?ftp-list": "echo 'FTP 接続し配下のファイルを確認する'",
    "ftp-list": "node ftp-list-files.js",
    "?upload": "echo 'FTP 接続し指定のファイルのみアップロードする'",
    "upload": "node ftp-upload-files.js",
    "?deploy": "echo 'FTP 接続し dist ディレクトリ配下の全ファイルをアップロードする'",
    "deploy": "node ftp-deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Neos21/neo.s21.xrea.com.git"
  },
  "keywords": [
    "Neo's World"
  ],
  "author": "Neo <neos21@gmail.com> (http://neo.s21.xrea.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Neos21/neo.s21.xrea.com/issues"
  },
  "homepage": "http://neo.s21.xrea.com/",
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "@neos21/gulp-template-html": "1.0.4",
    "@neos21/neos-normalize": "1.0.11",
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": "1.0.1",
    "babelify": "10.0.0",
    "broken-link-checker": "0.7.8",
    "browser-sync": "2.24.7",
    "browserify": "16.2.3",
    "del": "3.0.0",
    "ftp-client": "0.2.2",
    "ftp-deploy": "2.1.3",
    "gulp": "3.9.1",
    "gulp-changed": "3.2.0",
    "gulp-clean-css": "3.10.0",
    "gulp-load-plugins": "1.5.0",
    "gulp-plumber": "1.2.0",
    "gulp-rename": "1.4.0",
    "gulp-sass": "4.0.1",
    "gulp-uglify": "3.0.1",
    "gulp-watch": "5.0.1",
    "htmlhint": "0.10.1",
    "npm-scripts-info": "0.3.9",
    "promise-ftp": "1.3.5",
    "run-sequence": "2.2.1",
    "textlint": "11.0.0",
    "textlint-plugin-html": "0.2.0",
    "textlint-rule-ja-hiragana-hojodoushi": "1.0.4",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "1.0.1",
    "textlint-rule-preset-ja-spacing": "2.0.1",
    "textlint-rule-preset-ja-technical-writing": "3.1.0",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  }
}
