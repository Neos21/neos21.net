    "rehype-slug": "6.0.0",
    "rehype-stringify": "10.0.0",
    "rehype-toc": "3.0.2",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.0",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.0",
