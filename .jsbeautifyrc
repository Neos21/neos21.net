{
  "end_with_newline": true,     // 改行コード
  "eol": "\n",                  // 最終行に改行を入れる
  "indent_char": " ",           // インデントする文字
  "indent_size": 2,             // インデントのサイズ : 2スペース
  "indent_with_tabs": false,    // タブインデントを禁止する
  "max_preserve_newlines": 10,  // 許可する連続した空行の数
  "preserve_newlines": true,    // 空行を許可する
  "wrap_line_length": 0,        // 1行あたりの最大文字数 (0 なら無効)
  "html": {
    "allowed_file_extensions": ["htm", "html", "xhtml", "shtml", "xml", "svg", "dust"],
    "brace_style": "collapse",       // script 要素内の JS のブレースと改行の設定
    "content_unformatted": ["pre"],  // 指定の要素内はフォーマットしない
    "extra_liners": [],              // 空行を開ける要素の指定 (なし)
    "indent_body_inner_html": true,  // body 要素直下をインデントする
    "indent_handlebars": true,       // e.g. {{#foo}}, {{/foo}}
    "indent_head_inner_html": true,  // head 要素直下をインデントする
    "indent_inner_html": true,       // head 要素と body 要素もインデントする
    "indent_scripts": "keep",        // script 要素内のインデントを HTML に合わせる
    "unformatted": ["br", "a", "span", "img", "code", "pre", "sub", "sup", "em", "strong", "b", "i", "u", "strike", "big", "small", "pre", "h1", "h2", "h3", "h4", "h5", "h6"],  // 指定の要素部分はフォーマットしない
    "wrap_attributes": "auto"        // 2つ目以降の属性で強制改行するか否か
  },
  "css": {
    "allowed_file_extensions": ["css", "scss", "sass", "less"],
    "newline_between_rules": true,       // ルール間に空行を開ける
    "selector_separator": " ",           // セレクタ間を区切る文字
    "selector_separator_newline": true,  // 複数セレクタを指定する際にカンマで改行する
    "space_around_combinator": true      // 子要素セレクタ等の間にスペースを開ける
  },
  "js": {
    "allowed_file_extensions": ["jsbeautifyrc"],
    "brace_style": "none",                  // [collapse|expand|end-expand|none] Put braces on the same line as control statements (default), or put braces on own line (Allman / ANSI style), or just put end braces on own line, or attempt to keep them where they are
    "break_chained_methods": false,         // Break chained method calls across subsequent lines
    "comma_first": false,                   // Put commas at the beginning of new line instead of end
    "e4x": false,                           // Pass E4X xml literals through untouched
    "indent_level": 0,                      // Initial indentation level
    "jslint_happy": false,                  // If true, then jslint-stricter mode is enforced
    "keep_array_indentation": false,        // Preserve array indentation
    "keep_function_indentation": false,     // Preserve function indentation
    "operator_position": "before-newline",  // [before-newline|after-newline|preserve-newline] Set operator position
    "space_after_anon_function": true,      // Should the space before an anonymous function's parens be added, "function()" vs "function ()"
    "space_before_conditional": true,       // Should the space before conditional statement be added, "if(true)" vs "if (true)"
    "space_in_empty_paren": false,          // Add padding spaces within empty paren, "f()" vs "f( )"
    "space_in_paren": false,                // Add padding spaces within paren, ie. f( a, b )
    "unescape_strings": false               // Should printable characters in strings encoded in \xNN notation be unescaped, "example" vs "\x65\x78\x61\x6d\x70\x6c\x65"
  }
}
